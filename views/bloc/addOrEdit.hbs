<h3>{{viewTitle}}</h3>

<form action="/bloc" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{bloc._id}}">
    <div class="form-group">
        <strong><label>Code</label></strong>
        <input type="text" class="form-control" name="code" placeholder="code " value="{{bloc.code}}">
        <div class="text-danger">
            {{bloc.codeError}}</div>
    </div>
    <div class="form-group">
         <strong><label>Libelle</label></strong>
        <input type="text" class="form-control" name="libelle" placeholder="libelle" value="{{bloc.libelle}}">
        <div class="text-danger">
            {{bloc.libelleError}}</div>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-outline-dark" href="/bloc/list"><i class="fa fa-list-alt"></i> Bloc List</a>
        <a class="btn btn-outline-dark" href="/salle/list"><i class="fa fa-list-alt"></i> Salle List</a>
        
    </div>
</form>