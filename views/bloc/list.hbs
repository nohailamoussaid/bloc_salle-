
<table class="table table-hover"style= "border : 2px solid black; border-collapse: collapse;font-weight: bold;">
    <thead style="background-color: #8d65b3;">
        <tr>
            <th>Code</th>
            <th>Libelle</th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.code}}</td>
            <td>{{this.libelle}}</td>
            
            <td>
                <a href="/bloc/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/bloc/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
<center>
<h3><a class="badge rounded-pill bg-light" style="width: 50%;" href="/bloc" ><i class="fa fa-plus"></i> Create New</a> </h3>
</center>